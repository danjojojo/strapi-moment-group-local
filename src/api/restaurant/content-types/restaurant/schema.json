{
  "kind": "collectionType",
  "collectionName": "restaurants",
  "info": {
    "singularName": "restaurant",
    "pluralName": "restaurants",
    "displayName": "Restaurant"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "brand_name": {
      "type": "string",
      "required": true
    },
    "brand_logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "brand_wp_desktop": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "brand_wp_mobile": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "highlight_color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true
    },
    "modal_logo_color": {
      "type": "customField",
      "customField": "plugin::color-picker.color",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "display_order_now": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "display_reserve": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "display_our_menu": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "reserve_type": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "display_reserve"
            },
            true
          ]
        }
      },
      "required": true,
      "enum": [
        "redirect",
        "popup",
        "embed"
      ]
    },
    "reserve_name": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "reserve_type"
            },
            "popup"
          ]
        }
      },
      "required": true,
      "default": "Reserve",
      "enum": [
        "Reserve",
        "Contact Us"
      ]
    },
    "order_now_link": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "display_order_now"
            },
            true
          ]
        }
      },
      "required": true
    },
    "reserve_link": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "reserve_type"
            },
            "redirect"
          ]
        }
      },
      "required": true
    },
    "menu_pdf": {
      "type": "media",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "display_our_menu"
            },
            true
          ]
        }
      },
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files"
      ]
    },
    "contact_details": {
      "type": "dynamiczone",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "reserve_type"
            },
            "popup"
          ]
        }
      },
      "components": [
        "shared.contact-details"
      ],
      "required": true,
      "min": 1,
      "max": 1
    },
    "sortOrder": {
      "type": "integer"
    },
    "embed_form_link": {
      "type": "string",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "reserve_type"
            },
            "embed"
          ]
        }
      },
      "required": true
    }
  }
}
